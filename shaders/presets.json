{
  "constants": {
    // default size of compute work group used in textures
    "common.texture_work_group_size": 24,

    // voxel chunk lookup map size, NOTE: must be power of 2
    "raytrace.voxel_chunk_map_size": 16384,

    // voxel chunk lookup map unit capacity
    "raytrace.voxel_chunk_map_unit_capacity": 16,

    // absolute maximum of steps per single ray during raycast
    "raytrace.max_steps_per_ray": 1024,

    // materials span with same material, where end of previous span * coefficient >= start of a new span are merged
    // removing unnecessary details from translucent material edges
    "raytrace.material_span_merge_coef": 1.05,

    // -- spatial buffer --
    // Per frame gain of stability, when pixel is tracked.
    "spatial_buffer.stability_per_frame": 0.05,


    // When pixel z value change relative to camera distance is greater than this threshold, pixel stability is set to 0
    "spatial_buffer.z_delta_threshold": 0.05,
    "spatial_buffer.z_delta_weight": 0.5,

    // Minor move filter is used to filter out edges of large regions, moved by the same amount in slightly-moving regions,
    // caused by pixel coordinates being integers. This filter decreases stability values for edges of such regions.

    // Factor of stability decrease, 0.0 disables filter, 1.0 makes it decrease stability to zero at maximum detection value.
    "spatial_buffer.minor_move_filter_factor": 0.7,
    // Minimum pixel move amount for filter to trigger
    "spatial_buffer.minor_move_filter_min": 0.1,
    // Maximum pixel move amount for filter to trigger
    "spatial_buffer.minor_move_filter_max": 5.0,
    // Factor of decreasing stability only on region edges, instead on the all detected region. Value 0.0 will
    // make it ignore edges and decrease on all detected region, value 1.0 will make it decrease only around edges.
    "spatial_buffer.minor_move_filter_edge_weight": 0.75,

    // -- lighting --
    "lighting.normal_fadeout_distance": 192,
    "lighting.shadow_normal_fadeout_distance": 512,
    "lighting.normal_fadeout_rate": 2.5,
    "lighting.shadow_normal_fadeout_rate": 2.5,
    "lighting.lightmap_downsample": 1,

    // --- image units ---
    "raytrace.color_texture": 0,
    "raytrace.light_texture": 1,
    "raytrace.depth_texture": 2,

    "lightmap.last_frame": 0,
    "lightmap.current_frame": 1,
    "lightmap.blur_pass_texture": 2,

    "spatial_buffer.last_frame": 0,

    "common.spatial_buffer_current_frame": 6,
    "common.spatial_buffer": 7,
  }
}